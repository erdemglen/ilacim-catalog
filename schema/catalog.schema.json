{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "İlacım Catalog Schema",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "İlaç Adı": {
        "type": "string",
        "minLength": 1
      },
      "Barkod": {
        "oneOf": [
          { "type": "string", "pattern": "^[0-9]{13}$" },
          { "type": "number", "minimum": 0 }
        ],
        "description": "EAN-13 barkod: 13 haneli numerik string (tercih edilen) veya kaynakta sayı olarak gelebilir."
      },
      "ATC Kodu": { "type": ["string", "null"] },
      "ATC Adı":  { "type": ["string", "null"] },
      "Firma Adı": { "type": ["string", "null"] },
      "Reçete Türü": { "type": ["string", "null"] },
      "Durumu": { "type": ["string", "null"] }
    },
    "required": ["İlaç Adı", "Barkod"]
  }
}
